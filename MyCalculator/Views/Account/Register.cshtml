@model RegisterModel
@{
    string title = "Register";
    ViewBag.Title = title;
    ViewBag.NowUrl = "/Account/Register";
    string userId = ViewBag.UserId;
}
@section Link{
<a asp-action="Login" asp-controller="Account" user-id="@userId" is-btn="true">Login</a>
}
<form method="post" class="form-group">
    <div asp-validation-summary="ModelOnly" class="text-danger" style="font-style: oblique;" 
        user-id="@userId" is-translate="true"></div>

    <label user-id="@userId" is-translate="true">@Html.DisplayNameFor(e => e.Name)</label>
    <span asp-validation-for="Name" class="text-danger"></span>
    <input asp-for="Name" class="form-control _input"  />
    <br />
    <label user-id="@userId" is-translate="true">@Html.DisplayNameFor(e => e.Email)</label>
    <span asp-validation-for="Email" class="text-danger"></span>
    <input asp-for="Email" class="form-control _input"  />
    <br />
    <label user-id="@userId" is-translate="true">@Html.DisplayNameFor(e => e.Password)</label>
    <span asp-validation-for="Password" class="text-danger"></span>
    <input asp-for="Password" class="form-control _input"  />
    <br />
    <label user-id="@userId" is-translate="true">@Html.DisplayNameFor(e => e.ConfirmPassword)</label>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    <input asp-for="ConfirmPassword" class="form-control _input"  />
    <br />
    <label user-id="@userId" is-translate="true">@Html.DisplayNameFor(e => e.RememberMe)</label>
    <input asp-for="RememberMe"/>
    <br /> <br />
    <input type="submit" value="@title!"user-id="@userId" is-translate="true" is-btn="true" style="font-size:15px"/>
</form>

